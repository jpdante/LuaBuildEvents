<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <StartupObject>LuaBuildEvents.Program</StartupObject>
    <Authors>Joao Pedro Dante</Authors>
    <Company />
    <PackageProjectUrl>https://github.com/jpdante/LuaBuildEvents</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jpdante/LuaBuildEvents</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <AssemblyVersion>1.3.1.0</AssemblyVersion>
    <FileVersion>1.3.1.0</FileVersion>
    <Version>1.3.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="lua\io\directory.lua" />
    <None Remove="lua\io\file.lua" />
    <None Remove="lua\io\filestream.lua" />
    <None Remove="lua\io\path.lua" />
    <None Remove="lua\io\streamreader.lua" />
    <None Remove="lua\io\streamwriter.lua" />
    <None Remove="lua\net\webclient.lua" />
    <None Remove="lua\security\filehash.lua" />
    <None Remove="lua\security\stringhash.lua" />
    <None Remove="lua\sys\environment.lua" />
    <None Remove="lua\sys\process.lua" />
    <None Remove="lua\sys\processstartinfo.lua" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="lua\net\webclient.lua" />
    <EmbeddedResource Include="lua\security\filehash.lua" />
    <EmbeddedResource Include="lua\security\stringhash.lua" />
    <EmbeddedResource Include="lua\sys\process.lua" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="lua\io\directory.lua" />
    <EmbeddedResource Include="lua\io\file.lua" />
    <EmbeddedResource Include="lua\io\filestream.lua" />
    <EmbeddedResource Include="lua\io\path.lua" />
    <EmbeddedResource Include="lua\io\streamreader.lua" />
    <EmbeddedResource Include="lua\io\streamwriter.lua" />
    <EmbeddedResource Include="lua\sys\environment.lua" />
    <EmbeddedResource Include="lua\sys\processstartinfo.lua" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MoonSharp" Version="2.0.0" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="dotnet $(ProjectDir)bin\$(ConfigurationName)\netcoreapp3.0\$(TargetFileName) $(ProjectDir)Publish.BuildEvents.lua $(ProjectDir) $(ConfigurationName)" />
  </Target>

</Project>
